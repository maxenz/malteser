<div class="navbar navbar-inverse navbar-fixed-top" role="navigation" id="navbar-top-paramedic">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="navbar-text pull-left">
                <span id="titleEmpresa"> MALTESER <span class="glyphicon glyphicon-arrow-right" style="margin-left:10px"></span></span>
            </div>

            <p class="navbar-text title-paramedic" style="color: #357ebd">@ViewBag.Title</p>
        </div>

        @if (Request.IsAuthenticated) { 

        <div class="navbar-collapse collapse">
            <div class="navbar-text pull-right">
                <span style="display:block">
                    <i class="fa fa-user azul"></i>
                    <span id="user-paramedic">@User.Identity.Name</span>
                    <span id="icons-top-separator">|</span>
                    <span style="display:inline-block">
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-xs" id="navbar-top-logout"><span class="glyphicon glyphicon-off blanco"></span></a>
                        }
                    </span>
                </span>
                </div>
            </div>
        }
    </div>
</div>
